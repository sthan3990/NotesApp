    <div class="username-holder"><%= user %></div>
    <div class="dropdown-content">
      <form action="/logout" method="POST">
        <div id="logout">Logout</div>
      </form>
    </div>
  </div>
  <% } else { %>
  <!-- Show a login or signup button? -->
  <% } %>
