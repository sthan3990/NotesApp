<header>
  <% if (user) { %>
  <div class="dropdown" id="user-icon" data-id="<%= user %>">
    <div>
      <a href="#" data-toggle="modal" data-target="#modalRegisterForm"><i class="far fa-comment" data-toggle="modal"
          data-target="#modalRegisterForm"></i>
        <span id="edit">Edit</span>
      </a>
      <i class="fas fa-user-astronaut"></i>
